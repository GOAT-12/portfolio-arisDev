---
import Layout from "@layouts/Layout.astro";
import { basics } from "@cv";
import { Icon } from "astro-icon/components";

const { email } = basics;
---

<Layout title="Contact Me">
  <div class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <h1
        class="text-4xl font-bold mb-8 text-center flex items-center justify-center gap-3"
      >
        <Icon
          name="ri:mail-send-line"
          width={40}
          height={40}
          class="text-skin-hue"
        />
        Contactez-moi
      </h1>

      <form
        action="https://formspree.io/f/mnneyqyr"
        method="POST"
        class="space-y-6 bg-skin-muted rounded-2xl p-8"
      >
        <div>
          <label
            for="name"
            class="flex items-center gap-2 text-sm font-medium mb-2"
          >
            <Icon
              name="ri:user-line"
              width={18}
              height={18}
              class="text-skin-hue"
            />
            Nom
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2 rounded-lg border border-skin-hue bg-skin-button-muted text-skin-base focus:outline-none focus:ring-2 focus:ring-skin-hue"
            placeholder="Votre nom"
          />
        </div>

        <div>
          <label
            for="email"
            class="flex items-center gap-2 text-sm font-medium mb-2"
          >
            <Icon
              name="ri:mail-line"
              width={18}
              height={18}
              class="text-skin-hue"
            />
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 rounded-lg border border-skin-hue bg-skin-button-muted text-skin-base focus:outline-none focus:ring-2 focus:ring-skin-hue"
            placeholder="votre.email@example.com"
          />
        </div>

        <div>
          <label
            for="message"
            class="flex items-center gap-2 text-sm font-medium mb-2"
          >
            <Icon
              name="ri:chat-3-line"
              width={18}
              height={18}
              class="text-skin-hue"
            />
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-2 rounded-lg border border-skin-hue bg-skin-button-muted text-skin-base focus:outline-none focus:ring-2 focus:ring-skin-hue resize-none"
            placeholder="Votre message..."></textarea>
        </div>

        <button
          type="submit"
          class="w-full px-6 py-3 bg-skin-hue text-skin-inverted font-semibold rounded-lg hover:opacity-90 transition-opacity flex items-center justify-center gap-2"
        >
          <Icon name="ri:send-plane-fill" width={20} height={20} />
          Envoyer
        </button>

        <p class="text-center text-sm text-skin-muted">
          Ou contactez directement: <a
            href={`mailto:${email}`}
            class="text-skin-hue hover:underline">{email}</a
          >
        </p>
      </form>

      <div class="mt-8 text-center">
        <a
          href="/"
          class="text-skin-hue hover:underline flex items-center justify-center gap-2"
        >
          <Icon name="ri:arrow-left-line" width={20} height={20} />
          Retour au portfolio
        </a>
      </div>
    </div>
  </div>
</Layout>
