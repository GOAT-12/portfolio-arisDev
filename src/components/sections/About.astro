---
import Section from "../Section.astro";
import CV from "@cv";
const { summary } = CV.basics;

// Diviser le texte en mots et regrouper par phrases pour un meilleur affichage
const sentences = summary.split('. ').filter(s => s.trim().length > 0);
---

<Section className={Astro.props.className} title="About">
  <div class="space-y-4">
    {sentences.map((sentence, index) => {
      const words = sentence.split(' ');
      return (
        <p 
          key={`sentence-${index}`}
          class="font-mono text-sm sm:text-base opacity-80 print:font-sans text-skin-hue font-medium print:text-skin-base print:font-normal w-full select-none leading-relaxed"
        >
          {words.map((word, wordIndex) => (
            <span 
              key={`word-${index}-${wordIndex}`}
              class="inline-block px-0.5 py-0.5 rounded transition-all duration-200 
                     hover:bg-skin-button-muted/50 hover:shadow-sm hover:translate-y-[-1px]"
              data-ccursor="text"
            >
              {word}
            </span>
          ))}
          {index < sentences.length - 1 ? '.' : ''}
        </p>
      );
    })}
  </div>
</Section>